<p id="notice"><%= notice %></p>

<%= render partial: @blog %>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>

<br>
<h2>Comments</h2>

<div id="comments">
    <%= render partial: @blog.comments %>
</div>

<%= p "OMG" %>
<%= form_for [@blog, Comment.new] do |f| %>
        <p>
                <%= f.label :body, "New comment" %><br/>
                <%= f.text_area :body %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>